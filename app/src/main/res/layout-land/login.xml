<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--在“choo_login”布局文件中增加一个RelativeLayout布局
其中设定其id、宽度和高度、颜色以及位置-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/title_home"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/title_home"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="135dp"
            android:layout_marginLeft="135dp"
            android:text="北大软微选宿舍"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            android:layout_marginTop="2.0dip"/>

        <!--<ImageView
            android:id="@+id/title_update"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"
            android:contentDescription="@string/app_name" />-->


    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:background="@drawable/home_background2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/login_page"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/usrename_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="83dp"
                android:layout_marginStart="83dp"
                android:layout_gravity="center_vertical"
                android:text="账号"
                android:textColor="#000000"
                android:textSize="24.0sp"/>

            <TextView
                android:id="@+id/password_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="83dp"
                android:layout_marginStart="83dp"
                android:layout_gravity="center_vertical"
                android:text="密码"
                android:textColor="#000000"
                android:textSize="24.0sp"/>

            <ImageView
                android:id="@+id/login_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:layout_marginLeft="130dp"
                android:layout_marginStart="130dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_login"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/u_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"/>

            <EditText
                android:id="@+id/u_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/p_t"
                android:layout_alignBottom="@+id/p_t"
                android:layout_alignLeft="@+id/p_edit_text"
                android:layout_alignStart="@+id/p_edit_text"
                android:background="@drawable/contact_search_box_edittext_keyword_background"
                android:hint="学号"
                android:inputType="text"
                android:paddingBottom="8dp"
                android:paddingEnd="100dp"
                android:paddingLeft="10dp"
                android:paddingRight="100dp"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:textColorHint="#a9a9a9"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/u_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="学号错误"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/p_t"
                android:text="@string/密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft=        "110dp"
                android:layout_marginStart="110dp"/>

            <EditText
                android:id="@+id/p_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_t"
                android:inputType="text"
                android:hint="密码"
                android:textColorHint="#a9a9a9"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:background="@drawable/contact_search_box_edittext_keyword_background"
                android:textColor="#ff000000"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/p_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="密码错误"
                android:visibility="invisible"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>


